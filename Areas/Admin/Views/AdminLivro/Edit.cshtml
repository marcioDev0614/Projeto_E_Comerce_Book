@model LivroEC_V2.Models.Livro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar livros</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LivroId" />
            <div class="form-group" style="padding-bottom: 5px; padding-top: 5px">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 5px; padding-top: 5px">
                <label asp-for="DescricaoCurta" class="control-label"></label>
                <input asp-for="DescricaoCurta" class="form-control" />
                <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
            </div>
            <div class="form-group"style="padding-bottom: 5px; padding-top: 5px">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 5px; padding-top: 5px">
                <label asp-for="CaminhoImagem" class="control-label"></label>
                <input asp-for="CaminhoImagem" class="form-control" />
                <span asp-validation-for="CaminhoImagem" class="text-danger"></span>
            </div>
            <div class="form-group form-check" style="padding-bottom: 5px; padding-top: 5px">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsLivroPreferido" /> @Html.DisplayNameFor(model => model.IsLivroPreferido)
                </label>
            </div>
            <div class="form-group form-check" style="padding-bottom: 5px; padding-top: 5px">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
                </label>
            </div>
            <div class="form-group" style="padding-bottom: 5px; padding-top: 5px">
                <label asp-for="CategoriaId" class="control-label">Categoria</label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 5px; padding-top: 5px">
                <input type="submit" value="Salvar e Sair" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Voltar à lista</a>
            </div>
        </form>
    </div>
</div>

