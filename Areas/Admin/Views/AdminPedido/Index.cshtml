@*@model IEnumerable<LivroEC_V2.Models.Pedido>*@
@model ReflectionIT.Mvc.Paging.PagingList<LivroEC_V2.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de pedidos</h1>
<br />

<form method="get" class="form-inline">
    <input name="filer" class="form-control" placeholder="Filtro"  value="@Model.RouteValue["Filter"]"/>
    <br />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>

</form>
<br />

Total de Pedidos : @Model.TotalRecordCount
<br />
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar novo pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PedidoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PedidoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.PedidoId">Deletar</a> |
                <a asp-action="PedidoLivros" asp-route-id="@item.PedidoId">Ver Itens</a>
            </td>
        </tr>
}
    </tbody>
</table>
