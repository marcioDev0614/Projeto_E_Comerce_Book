@model LivroEC_V2.ViewModels.PedidoLivroViewModel


@{
    ViewData["Title"] = "PedidoLivros";
    decimal totalPedidos = 0;
}

<h1>Livros do Pedido</h1>
<hr />

<h3>Pedido  : @Html.DisplayFor(model => @Model.Pedido.PedidoId)</h3>
<h3>Cliente : @Html.DisplayFor(model => @Model.Pedido.Nome)</h3>
<h3>Data    : @Html.DisplayFor(model => @Model.Pedido.PedidoEnviado)</h3>
<h3>Entrega : @Html.DisplayFor(model => Model.Pedido.PedidoEntregueEm)</h3>

<table class="table">

    @foreach(var item in Model.Pedido.PedidosItens)
    {
        totalPedidos += (item.Livro.Preco * item.Quantidade);

        <tr>
            <td align="right">
                <h3>@Html.DisplayFor(modelItem => item.Livro.Titulo)</h3>
            </td>
            <td align="right">
                <h3>@string.Format("{0:C}", item.Livro.Preco)</h3>
            </td>
            <td align="right">
                <h3>(@Html.DisplayFor(modelItem => item.Quantidade))</h3>
            </td>
        </tr>
    }
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h3>Total do Pedido: @string.Format("{0:C}", totalPedidos)</h3>
        </td>
    </tr>
</table>
<a asp-action="Index" class="btn btn-outline-info">Retornar</a>