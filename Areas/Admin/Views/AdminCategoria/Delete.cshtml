@model LivroEC_V2.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar categoria</h1>

<h3>Você tem certeza que vai deletar a categoria: @Model.CategoriaNome?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="Index">Voltar à lista</a>
    </form>
</div>
