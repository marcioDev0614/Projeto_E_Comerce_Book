@model LivroEC_V2.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar categoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group">
                <label asp-for="CategoriaNome" class="control-label"></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom: 5px; padding-top: 5px">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar e Sair" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Voltar à lista</a>
            </div>
            <div>              
            </div>
        </form>
    </div>
</div>


