<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LivroEC_V2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LivroEC_V2.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/dt/dt-2.0.7/datatables.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); font-size: 35px" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LivroEC_V2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @await Html.PartialAsync("_LoginPartial");
                        </li>
                        <li class="nav-item">
                            <a style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); color: #fff" class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); color: #fff" class="nav-link text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); color: #fff" class="nav-link text-light" asp-area="" asp-controller="Livro" asp-action="List">Livros</a>                 
                        </li>
                        <li class="nav-item">
                            <a style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); color: #fff" class="nav-link text-light" asp-area="" asp-controller="Contato" asp-action="Index">Contato</a>
                        </li>
                        <li style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); color: #fff" class="nav-link text-light">Livro por Categoria:</li>
                        @await Component.InvokeAsync("CarrinhoCompraResumo");
                        @await Component.InvokeAsync("CategoriaMenu");
                        <li class="nav-item">
                            <form class="nav-form navbar-left" asp-controller="Livro" asp-action="Search" method="get">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Procurar produto" name="searchString" value="@ViewData["searchString"]" />
                                </div>
                            </form>
                         
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy Desenvolvido por: <strong style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Márcio Rodrigo.</strong>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.0.7/datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
